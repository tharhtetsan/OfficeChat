<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_manage_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ucsm.officechat.ManageAccount"
    android:background="@drawable/g2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Manage Account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView31"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:textColor="@android:color/holo_blue_bright" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/textView29"
            android:layout_height="30dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textView33"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/b1"
                android:id="@+id/idmImageView"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView32"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/textView26"
            android:textAlignment="center" />

        <TextView
            android:text="Thar Htet San(ID)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idmUserid"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@android:color/black" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/idmUserName"
            android:hint="User Name"
            android:textColorHint="@android:color/background_light"
            android:textColorHighlight="@android:color/background_dark" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/idmCurrentPass"
            android:hint="Current Password"
            android:textColorHighlight="@android:color/background_dark"
            android:textColor="?android:attr/colorForeground"
            android:textColorHint="@android:color/background_light" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/idmNewPass"
            android:hint="New Password"
            android:textColorHighlight="@android:color/background_dark"
            android:textColorHint="@android:color/background_light" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/textView30"
            android:layout_height="30dp" />

        <Button
            android:text="Save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idmbtnSave"
            android:background="@color/colorPrimary" />

    </LinearLayout>
</RelativeLayout>
