<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ucsm.officechat.UserProfile"
    android:background="@drawable/a5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <FrameLayout android:layout_width="match_parent"
            android:layout_height="244dp"
            android:theme="@style/Animation.Design.BottomSheetDialog"
            android:layout_weight="0.78">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.04">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/textView3"
                        android:layout_weight="1" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/imv1"
                        android:id="@+id/idpuserImage"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/textView25"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/textView2"
                        android:layout_height="30dp" />

                    <TextView
                        android:text="Thar Htet San"
                        android:layout_width="match_parent"
                        android:id="@+id/idName"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="24sp"
                        android:layout_height="40dp" />

                    <TextView
                        android:text="tharhtet1234@gmail.com"
                        android:layout_width="match_parent"
                        android:id="@+id/idUsergmail"
                        android:textAlignment="viewStart"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/holo_blue_bright" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/textView"
                    android:layout_height="20dp" />

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="\tLive In   :"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView13"
                android:layout_weight="0.24"
                android:textColor="@android:color/background_light" />

            <TextView
                android:text="Mandalay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/idUserLivein"
                android:layout_weight="0.65"
                android:textColor="@android:color/background_light" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="Work At   :"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/textView5"
                android:layout_weight="0.75"
                android:textColor="@android:color/background_light" />

            <TextView
                android:text="UCSM"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/idUserWorkAt"
                android:layout_weight="2.44"
                android:textColor="@android:color/background_light" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="Rank / Post :"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView7"
                android:layout_weight="0.21"
                android:textColor="@android:color/background_light" />

            <TextView
                android:text="Student"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/idUserRank"
                android:layout_weight="0.88"
                android:textColor="@android:color/background_light" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="Gnder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView9"
                android:layout_weight="0.39"
                android:textColor="@android:color/background_light" />

            <TextView
                android:text="Male"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/idUserGender"
                android:layout_weight="0.94"
                android:textColor="@android:color/background_light" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:text="From :"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/textView20"
                android:layout_weight="0.15"
                android:textColor="@android:color/background_light" />

            <TextView
                android:text="Unicertisy of Computer Studied Mandalay"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/idUserSchool"
                android:layout_weight="0.87"
                android:textColor="@android:color/background_light" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
