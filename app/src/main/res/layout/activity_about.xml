<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ucsm.officechat.About">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_weight="0.31"
            android:background="@drawable/g2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textView43"
                android:textColor="?android:attr/textColorSecondaryNoDisable" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt1"
                android:textSize="24sp"
                android:textColor="?android:attr/textColorPrimaryNoDisable"
                android:fontFamily="cursive" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt2"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:fontFamily="cursive" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView44"
            android:layout_weight="0.21" />

        <TextView
            android:text="Please contact and advise me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView42"
            android:textAlignment="center" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView34"
                    android:layout_weight="1"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="18sp" />

                <TextView
                    android:text="Thar Htet San"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/Lfacebook"
                    android:layout_weight="2.74"
                    android:textSize="18sp"
                    android:textColor="@android:color/holo_blue_dark" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="Gmail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView36"
                    android:layout_weight="1" />

                <TextView
                    android:text="tharhtet1234@gmail.com"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/LGmail"
                    android:layout_weight="0.89"
                    android:textColor="@android:color/holo_red_light" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="Ph-no"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView38"
                    android:layout_weight="1.47" />

                <TextView
                    android:text="09-783847610,\n09-402549987"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView37"
                    android:layout_weight="2.40"
                    android:textColor="@android:color/background_dark" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
